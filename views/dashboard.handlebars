    {{!-- add post form --}}
<form>
  <div>
    <h1 class="page-title">Dashboard</h1>
    <h2 class="subtitle">Add a Post</h2>
    <div class="form-group">
      <div class="container mt-5"></div>
      <label for="title">Blog Title</label>
      <textarea class="form-control" name="title" id="title" rows="1"></textarea>
    </div>
    <div class="form-group">
      <label for="content">Blog Content</label>
      <textarea class="form-control" name="content" id="content" rows="5"></textarea>
    </div>
    <button type="submit" class="btn btn-primary" id="new-post">Add Blog</button>
    <div>
</form>
{{!-- User's Posts --}}
<div>
  <div class="divider">
  <h2 class="subtitle">My Posts</h2>
  </div>
  {{#each post}}
  <div>
    <h3>{{title}}</h3>
   <a href="/api/post/{{id}}" class="small-text view-post">Edit Blog</a>
    <p>{{content}}</p>
    <p class="small-text date">Written by {{user.username}} on {{formatDate created_at}}</p>
  </div>

    <div>
      {{#each comments as |comment|}}
      <p class="para">{{comment.content}}</p>
      <p class="small-content">{{user.username}} on {{formatDate created_at}}</p>
      {{/each}}
    </div>
  </div>
  {{/each}}
</div>
<script src="/js/dashboard.js"></script>