<div>
  {{#each posts as |post|}}
  <div class="divider">
    <h4>{{post.title}}</h4>
    <button id="view-post" class="small-text">View Blog</button>
    <div>
      <p class="para">{{post.content}}</p>
      <p class="small-text">Written by {{user.username}} on {{formatDate created_at}}</p>
    </div>
  </div>
  {{/each}}
</div>
<script src="./js/homepage.js"></script>