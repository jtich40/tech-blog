<div>
  <h1>Homepage</h1>
  {{#each posts as |post|}}
  <div>
    <h2>{{post.title}}</h2>
    <p>{{post.content}}</p>
    <div style="background-color: yellow">
      {{#each post.comments as |comment|}}
      <div>
        <p>{{comment.content}}</p>
        <p>Commentator: {{comment.user.username}}</p>
      </div>
      {{/each}}
    </div>
    <p>Poster: {{post.user.username}}</p>
  </div>
  {{/each}}
</div>
