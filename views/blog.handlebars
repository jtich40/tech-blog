{{!-- homepage single-post --}}
<div>
  <div>
    <h3>{{post.title}}</h3>
    <p>{{post.content}}</p>
    <p>Written by {{user.username}} on {{formatDate created_at}}</p>
  </div>
  {{#each post.comments as |comment|}}
  <div>
    <p>{{comment.content}}</p>
    <p>{{comment.user.username}} on {{formatDate created_at}}</p>
  </div>
  {{#if logged_in}}
    <button>Edit Blog</button>
    <button>Edit Comment</button>
  <div>
    <textarea name="comment" id="comment" cols="30" rows="10">Add comment here...</textarea>
    {{!-- when submit clicked, refreshes page with added comment --}}
  <button type="submit" class="btn btn-primary">Submit</button>
  </div>
  {{/if}}
  {{/each}}
</div>
</div>

{{!-- display: none until button clicked --}}
<form class="hide">
  <div>
    <h3>{{post.title}}</h3>
    <p>{{post.content}}</p>
    <p>Written by {{user.username}} on {{formatDate created_at}}</p>
  </div>
  <div class="form-group">
    <label for="title">Comment</label>
    <textarea class="form-control" name="comment" id="comment" rows="1">{{comment.content}}</textarea>
  </div>
{{!-- After update blog button clicked with textarea info, refreshes page with blog updated back to single-post view --}}
  <button type="submit" class="btn btn-primary" id="update-comment">Update Comment</button>
  {{!-- After delete blog button clicked, refreshes page and removes blog back on dashboard view --}}
  <button type="submit" class="btn btn-primary" id="delete-comment">Delete Comment</button>
</form>

<form class="hide">
  <div class="form-group">
    <label for="title">Blog Title</label>
    <textarea class="form-control" name="title" id="title" rows="1">{{post.title}}</textarea>
  </div>
  <div class="form-group">
    <label for="content">Blog Content</label>
    <textarea class="form-control" name="content" id="content" rows="5">{{post.content}}</textarea>
  </div>
  {{!-- After update blog button clicked with textarea info, refreshes page with blog updated back to single-post view --}}
  <button id="update-post" type="submit" class="btn btn-primary">Update Blog</button>
  {{!-- After delete blog button clicked, refreshes page and removes blog back on dashboard view --}}
  <button id="delete-post" type="submit" class="btn btn-primary">Delete Blog</button>
</form>
<script src="../public/js/blog.js"></script>